<Window x:Class="_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Content="Play" />
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Content="Options" />
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Content="Quit" />
        </StackPanel>
    </Grid>
</Window>
